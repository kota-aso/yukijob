  <div class="job">
    <div class="job-info">
      <div class="shop-name">
        <%= @job.shop_name %>(<%=@job.occupation.name %>)
      </div>
      <div class="salary">
        時給/<%= @job.salary %>円
      </div>
    </div>
  </div>
    
  <% if user_signed_in? && current_user.id == @job.user_id %>
    <%= link_to '編集', edit_job_path(@job.id), method: :get%>
    <%= link_to '削除', job_path(@job.id), method: :delete%>
  <% end %>
